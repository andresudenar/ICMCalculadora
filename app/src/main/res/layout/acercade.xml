<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/casa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/transparencia"
        app:srcCompat="@mipmap/puerta"
        android:layout_marginTop="108dp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textoImportante"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="@string/importante"
        android:gravity="center"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:text="@string/tituloImportante"
        android:textColor="#000000"
        android:id="@+id/textView3" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textoImportante"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:text="@string/creador" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_marginTop="20dp"
        android:layout_toLeftOf="@+id/casa"
        android:layout_toStartOf="@+id/casa"
        android:background="@drawable/borde_redondo"
        android:onClick="facebook"
        app:srcCompat="@mipmap/btn_facebook" />

    <ImageButton
        android:id="@+id/imageButton4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageButton2"
        android:layout_toEndOf="@+id/casa"
        android:layout_toRightOf="@+id/casa"
        android:background="@drawable/borde_redondo"
        android:onClick="google"
        app:srcCompat="@mipmap/btn_google" />

</RelativeLayout>